@model BLL.DAL.Movie

@{
ViewData["Title"] = "Delete Movie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">‚ö†Ô∏è Confirm Deletion</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this movie?</h5>
                    <div class="mt-3">
                        <h4><strong>@Model.Name</strong></h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-4">üìÖ Release Date</dt>
                            <dd class="col-sm-8">@Model.ReleaseDate?.ToString("yyyy-MM-dd")</dd>

                            <dt class="col-sm-4">üí∞ Total Revenue</dt>
                            <dd class="col-sm-8">$@Model.TotalRevenue</dd>

                            <dt class="col-sm-4">üé¨ Director</dt>
                            <dd class="col-sm-8">@Model.Director.Name @Model.Director.Surname</dd>
                        </dl>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
