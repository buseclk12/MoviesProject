@model MoviesProject.Controllers.MovieCommand

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">ðŸŽ¬ Add a New Movie</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Movie Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter the movie name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ReleaseDate" class="form-label">Release Date</label>
                            <input asp-for="ReleaseDate" class="form-control" type="date" />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TotalRevenue" class="form-label">Total Revenue ($)</label>
                            <input asp-for="TotalRevenue" class="form-control" type="number" step="0.01" placeholder="Enter the revenue" />
                            <span asp-validation-for="TotalRevenue" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DirectorId" class="form-label">Director</label>
                            <select asp-for="DirectorId" class="form-select" asp-items="@(ViewData["DirectorId"] as SelectList)">
                                <option value="" disabled selected>Select a director</option>
                            </select>
                            <span asp-validation-for="DirectorId" class="text-danger"></span>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
