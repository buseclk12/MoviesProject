@model IEnumerable<BLL.DAL.Movie>

<h2 class="text-center">Movies</h2>

<div class="row">
    @foreach (var movie in Model)
    {
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title text-primary">@movie.Name</h5>
                <p class="card-text">
                    <strong>Release Date:</strong> @movie.ReleaseDate?.ToString("yyyy-MM-dd")<br>
                    <strong>Total Revenue:</strong> $@movie.TotalRevenue<br>
                    <strong>Director:</strong> @movie.Director.Name
                </p>
                <div class="d-flex justify-content-between gap-2">
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-outline-info btn-sm">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-outline-warning btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
    }
</div>

<div class="mt-4 text-center">
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-circle"></i> Add New Movie
    </a>
</div>
