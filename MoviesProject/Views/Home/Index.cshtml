@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="jumbotron text-center bg-light p-5 shadow-sm">
        <h1 class="display-4">🎬 Welcome to the Movies Project! 🎥</h1>
        <p class="lead mt-4">
            Manage your favorite movies and directors easily with our user-friendly interface.
            Browse through our database, add new movies, update details, and much more!
        </p>
        <hr class="my-4">
        <p>
            Start exploring now by navigating to the movies or directors sections.
        </p>
        <div class="mt-3">
            <a href="/Movies" class="btn btn-primary btn-lg me-2">Explore Movies</a>
            <a href="/Directors" class="btn btn-secondary btn-lg">View Directors</a>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🎬 Movies Section</h5>
                    <p class="card-text">
                        Explore our movies database, where you can view, create, edit, and delete movies. 
                        Keep track of movie details like release dates, revenues, and their respective directors.
                    </p>
                    <a href="/Movies" class="btn btn-primary">Go to Movies</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🎭 Directors Section</h5>
                    <p class="card-text">
                        View and manage directors who create iconic movies. Add new directors, 
                        update their profiles, and ensure your database is always up-to-date.
                    </p>
                    <a href="/Directors" class="btn btn-secondary">Go to Directors</a>
                </div>
            </div>
        </div>
    </div>
</div>
