@model BLL.DAL.Director

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">üóëÔ∏è Delete Director</h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">Are you sure you want to delete this director?</p>
                    <ul class="list-group mb-4">
                        <li class="list-group-item">
                            <strong>Name:</strong> @Model.Name
                        </li>
                        <li class="list-group-item">
                            <strong>Surname:</strong> @Model.Surname
                        </li>
                        <li class="list-group-item">
                            <strong>Is Retired:</strong> @(Model.IsRetired ? "Yes" : "No")
                        </li>
                    </ul>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        <div class="text-end">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
