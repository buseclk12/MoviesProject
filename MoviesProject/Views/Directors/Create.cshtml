@model BLL.DAL.Director

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">ðŸŽ­ Add Director</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">First Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter director's first name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Surname" class="form-label">Last Name</label>
                            <input asp-for="Surname" class="form-control" placeholder="Enter director's last name" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input asp-for="IsRetired" class="form-check-input" type="checkbox" />
                            <label asp-for="IsRetired" class="form-check-label">Is Retired</label>
                            <span asp-validation-for="IsRetired" class="text-danger"></span>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
