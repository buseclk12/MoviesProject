@model IEnumerable<BLL.DAL.Director>

<div class="container mt-5">
    <h2 class="text-center mb-4">ðŸŽ­ Directors</h2>

    <div class="row g-4">
        @if (!Model.Any())
        {
        <div class="col-12">
            <div class="alert alert-warning text-center">
                No directors found. Add a new one!
            </div>
        </div>
        }
        else
        {
        @foreach (var director in Model)
        {
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@director.Name @director.Surname</h5>
                    <p class="card-text">
                        <strong>Is Retired:</strong> @(director.IsRetired ? "Yes" : "No")
                    </p>
                    <div class="d-flex justify-content-between mt-3 gap-2 ">
                        <a asp-action="Details" asp-route-id="@director.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@director.Id" class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@director.Id" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
        }
        }
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Director
        </a>
    </div>
</div>
